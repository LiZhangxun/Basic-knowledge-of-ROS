<launch>
	<!-- 加载urdf文件 -->
	<param name="robot_description" textfile="$(find mbot_description)/urdf/urdf/mbot_withall.urdf" />

	<!-- 设置GUI参数，显示关节控制插件(自带的) -->
	<!-- 注意必须要joint_state_publisher_gui，否则运行不出来gui插件 -->
	<param name="joint_state_publisher_gui" value="true"/>
	
	<!-- 运行joint_state_publisher节点，发布机器人的关节状态  -->
	<node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" />
	
	<!-- 运行robot_state_publisher节点，发布tf关系到tf树上  -->
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />
	
	<!-- 运行rviz可视化界面 -->
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find mbot_description)/config/mbot_urdf.rviz" required="true" />
</launch>